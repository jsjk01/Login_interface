<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_weight="3"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/SkyPe_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/skype"
            android:layout_marginTop="@dimen/large"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/todo"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ads"
            android:textSize="@dimen/default_size"
            android:layout_marginTop="15dp"
            android:textColor="@color/spblack"
            android:layout_below="@+id/SkyPe_icon"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/font"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:src="@drawable/font"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/default_size"
            />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@android:color/white">


        <LinearLayout
            android:layout_marginTop="@dimen/default_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/normal"
            android:gravity="center">

            <ImageView
                android:id="@+id/connect"
                android:layout_width="100dp"
                android:layout_height="100dp"
                />


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>